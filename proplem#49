}
bool Login()
{
	string pincod;
	do
	{
		pincod = Readpincod();
		if (pincod == "1234")
		{
			return 1;
		}

		else
		{
			cout << "\nworgin\n";
			system("color 4f");

		}
	} while (pincod != "1234");
}
int main()
{

	if (Login())
	{
		system("color 2f");
