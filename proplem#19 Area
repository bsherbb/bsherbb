}
float clcletArea(float D)
{
	float pI = 3.141592653589793238;
	float Area =(  pow(D, 2)*pI) / 4;
	return Area;
	
}
void printArea(float Area)
{
	cout << "the Area" << Area << endl;
}
int main()
{
	float D;
	Readnumpers(D);
	printArea(clcletArea(D));
	return 0;
}
